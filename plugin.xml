<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="cordova-plugin-reset-fontsize" version="1.0.0">
    <name>cordova resetFontSize plugin</name>
    <description>Cordova plugin for resetting font size</description>
    <author>sirg2003</author>
    <license>MIT</license>
    <keywords>cordova,android,fontsize</keywords>
    <repo>https://github.com/sirg2003/cordova-plugin-reset-fontsize.git</repo>
    <issue>https://github.com/sirg2003/cordova-plugin-reset-fontsize/issues</issue>

    <engines>
        <engine name="cordova-android" version=">=10.0.0" />
    </engines>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="ResetFontSize">
                <param name="android-package" value="com.sirg.cordova.ResetFontSize"/>
                <param name="onload" value="true"/>
            </feature>
        </config-file>

        <source-file src="src/android/ResetFontSize.java" target-dir="src/com/sirg/cordova/" />
    </platform>
</plugin>
